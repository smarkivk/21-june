import java.util.ArrayList;

public class Main {
    public static void main(String[] args) {
        // Create an ArrayList of Product objects
        ArrayList<Product> productList = new ArrayList<>();

        // Add products to the ArrayList
        productList.add(new Product("Product 1", 10.99, "Description 1"));
        productList.add(new Product("Product 2", 19.99, "Description 2"));
        productList.add(new Product("Product 3", 8.99, "Description 3"));

        // Access elements from the ArrayList
        for (Product product : productList) {
            System.out.println(product.getName() + " - $" + product.getPrice());
        }
    }
}
